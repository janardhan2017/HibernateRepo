<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="hibpu">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.jana.entities.Employee</class>
    <class>com.jaan.entities.Department</class>
    <properties>
    <property name="javax.persistence.jdbc.driver_class" value="oracle.jdbc.driver.OrcleDriver"/>
    <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
    <property name="javax.persistence.jdbc.user" value="myproject"/>
    <property name="javax.persistence.jdbc.password" value="myproject"/>
    <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
    <property name="hibernate.show_sql" value="true"/>
    <property name="hibernate.hbm2ddl.auto" value="update"/>
    
    </properties>
    
    </persistence-unit>
    </persistence>